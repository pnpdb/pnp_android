<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_selector"
    android:orientation="vertical"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/album_list_img"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/album_list_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/album_list_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/album_list_img"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/dimen_text_s12" />

    <TextView
        android:id="@+id/album_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/album_list_count"
        android:layout_alignLeft="@+id/album_list_count"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dimen_text_s16" />

</RelativeLayout>